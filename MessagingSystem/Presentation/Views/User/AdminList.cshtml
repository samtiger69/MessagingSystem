@model Presentation.Models.UserList
@using System.Web.Helpers;
@using Domain.Entities;

@{
    ViewBag.Title = "Admins";
}

<h3>Admin list</h3>

<br />

<p>
@Html.ActionLink("Create new", "CreateAdmin")
</p>

@using (Html.BeginForm("AdminList", "User", FormMethod.Post, new {@id = "deleteAdmins" }))
{

    <table class="table  table-hover">
            <tr>
                <th></th>
                <th>Username</th>
                <th>Name</th>
                <th>Organization</th>
            </tr>
        <tbody>
            @foreach (var item in @Model.Users)
            {
                <tr>
                    <td><input type="checkbox" name="Ids" value="@item.Id" class="cb"/></td>
                    <td>@Html.ActionLink(item.Username, "EditAdmin", new { Id = item.Id })</td>
                    <td>@item.Name</td>
                    <td>@item.Organization.Name</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <input type="button" id="simpleConfirm" class="btn btn-primary" value="Delete" />
                    <ul class="pagination pull-right">
                        @for (int pagenum = 1; pagenum <= @Model.PagerCount; pagenum++)
                        {
                            <li class="paginate_button"><a href="@Url.Action("AdminList", "User", new { pageNumber = @pagenum })" aria-controls="example" data-dt-idx="2" tabindex="0">@pagenum</a></li>
                        }
                    </ul>
                </td>
            </tr>
        </tfoot>
    </table>
}

<script>
    var counter = 0;
    $('#simpleConfirm').attr("disabled", true);

    $(document).ready(function () {
        $('.cb').change(function () {
            if (this.checked) {
                counter++;
            }
            else {
                counter--;
            }
            if (counter > 0) {

                $('#simpleConfirm').attr("disabled", false);
            }
            else {
                $('#simpleConfirm').attr("disabled", true);
            }
        });
    });

    $("#simpleConfirm").confirm(
        {
            title: "Delete Confirmation",
            text: "Are you sure to delete?",
            confirmButton: "Delete",
            cancelButton: "Cancel",
            post: false,
            confirm: function (button) {
                $("#deleteAdmins").submit();
            },
            cancel: function (button) {
                $('form input:checkbox').prop("checked", false);
                counter = 0;
                $('#simpleConfirm').attr("disabled", true);
            },
            submitForm: false,
            confirmButtonClass: "btn-primary",
            cancelButtonClass: "btn-default",
            dialogClass: "modal-dialog",
            modalOptionsBackdrop: true,
            modalOptionsKeyboard: true
        });
</script>